<div class="row">
  <% @movies.each do |movie| %>
    <div class="col-sm-6 col-md-2">
      <div class="thumbnail">
        <%= link_to (image_tag movie.poster.url(:medium), class: 'image', style: "height: 250px; width: 150px;"), movie%>
      </div>
      <div class="title">
        <%= movie.title %>
      </div>
      <hr/>
    </div>
  <% end %>
</div>