<div class="row">
	<div class="offset-md-4 col-md-4 form-control">
	<h2>Вход</h2>
		<%= notice %>
		<%= form_for(:user, :url => session_path(:user)) do |f| %>
			<%= f.text_field :email, class: 'form-control'%>
			<%= f.password_field :password, class: 'form-control' %>
			<%= f.check_box :remember_me %>
			<%= f.label :remember_me %>
			<div class="row">
				<%= f.submit 'Войти', class: 'btn btn-info' %>
				<%= link_to 'Регистрация', new_user_registration_url, class: 'btn btn-danger'%>
				<%= link_to 'Забыли пароль?', new_password_path(:user), class: 'btn btn-warning' %>
			</div>
		<% end %>
		<hr/>

	</div>
</div>