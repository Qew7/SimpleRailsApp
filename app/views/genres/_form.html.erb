<%= form_with(model: genre) do |form| %>
  <% if genre.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(genre.errors.count, "error") %> попрепятствовало сохранению фильма:</h2>

      <ul>
      <% genre.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, for: :name%>
    <%= form.text_field :name, id: :name, class: 'form-control' %>
  </div>

  <%= form.submit class: "btn btn-info"%>

<% end %>
